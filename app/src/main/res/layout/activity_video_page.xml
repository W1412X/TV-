<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#338968cd"
    tools:context=".VideoPageActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="@integer/material_motion_duration_long_1"
            android:layout_margin="5dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/video_page_video_item_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="@integer/material_motion_duration_short_2"/>
            <ScrollView
                android:layout_weight="@integer/material_motion_duration_short_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/video_page_title_text_view"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/video_page_msg_text_view"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <ScrollView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/material_motion_duration_medium_1">
            <com.example.ijkplayer1.CustomLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/video_page_episode_button_list"/>
        </ScrollView>
    </LinearLayout>
    <ProgressBar
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:id="@+id/video_view_loading_view"/>
</RelativeLayout>